{
  "name": "x402-agent-settlement",
  "version": "0.1.0",
  "description": "Agent-to-Agent Settlement Layer on Solana x402",
  "private": true,
  "workspaces": [
    "facilitator"
  ],
  "scripts": {
    "install:all": "pnpm install && cd facilitator && pnpm install",
    "build:facilitator": "cd facilitator && pnpm build",
    "start:kora": "cd facilitator && pnpm run start:kora",
    "start:facilitator": "cd facilitator && pnpm start",
    "start:registry": "cd registry && python -m uvicorn src.main:app --reload --port 8000",
    "demo": "cd agents && python src/demo.py",
    "setup": "node scripts/setup-keypairs.js"
  },
  "keywords": [
    "solana",
    "x402",
    "agents",
    "ai",
    "micropayments",
    "settlement"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  }
}
